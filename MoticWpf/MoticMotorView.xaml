<UserControl
    x:Class="MoticWpf.MoticMotorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:liftui="https://github.com/pchuan98/Lift.UI"
    xmlns:local="clr-namespace:MoticWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:MoticMotorViewModel}"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>

        <UniformGrid Columns="3">

            <GroupBox
                Width="150"
                Margin="10"
                Header="X坐标(μm)"
                Style="{DynamicResource GroupBoxTab}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="{Binding X, StringFormat={}{0:F2}}"
                    TextAlignment="Center" />
            </GroupBox>

            <GroupBox
                Width="150"
                Margin="10"
                Header="Y坐标(μm)"
                Style="{DynamicResource GroupBoxTab}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="{Binding Y, StringFormat={}{0:F2}}"
                    TextAlignment="Center" />
            </GroupBox>
            <GroupBox
                Width="150"
                Margin="10"
                Header="Z坐标(μm)"
                Style="{DynamicResource GroupBoxTab}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="{Binding Z, StringFormat={}{0:F2}}"
                    TextAlignment="Center" />
            </GroupBox>
        </UniformGrid>

        <UniformGrid Columns="2" IsEnabled="{Binding IsConnect}">
            <GroupBox
                Width="300"
                Margin="10"
                Header="绝对位移">
                <UniformGrid Columns="2">
                    <StackPanel>
                        <GroupBox
                            Margin="5"
                            Header="目标位置-X(μm)"
                            Style="{DynamicResource GroupBoxTab}">
                            <liftui:NumericUpDown
                                Width="120"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Minimum="-50000"
                                ValueFormat="N1"
                                Value="{Binding TargetX}" />
                        </GroupBox>
                        <GroupBox
                            Margin="10"
                            Header="目标位置-Y(μm)"
                            Style="{DynamicResource GroupBoxTab}">
                            <liftui:NumericUpDown
                                Width="120"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Minimum="-50000"
                                ValueFormat="N1"
                                Value="{Binding TargetY}" />
                        </GroupBox>
                        <GroupBox
                            Margin="10"
                            Header="目标位置-Z(μm)"
                            IsEnabled="{Binding IsZAxisEnable}"
                            Style="{DynamicResource GroupBoxTab}">
                            <liftui:NumericUpDown
                                Width="120"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Maximum="1000"
                                Minimum="-1000"
                                ValueFormat="N1"
                                Value="{Binding TargetZ}" />
                        </GroupBox>
                    </StackPanel>

                    <UniformGrid Rows="2">
                        <Button
                            Width="100"
                            Height="80"
                            Command="{Binding SetAbsolutePositionCommand}"
                            Content="绝对位移" />
                        <Button
                            Width="100"
                            Height="80"
                            Command="{Binding GetCurrentPositionCommand}"
                            Content="填充当前位置" />

                    </UniformGrid>
                </UniformGrid>
            </GroupBox>
            <GroupBox
                Width="300"
                Margin="10"
                Header="相对位移">
                <UniformGrid Rows="3">

                    <GroupBox
                        Width="280"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Header="步进-X(μm)"
                        Style="{DynamicResource GroupBoxTab}">
                        <DockPanel>
                            <liftui:NumericUpDown
                                Width="100"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                ValueFormat="N1"
                                Value="{Binding XStep}" />
                            <Button
                                x:Name="SetRelativePositionX"
                                Width="80"
                                HorizontalAlignment="Left"
                                VerticalContentAlignment="Center"
                                Command="{Binding SetXInverseRelativePositionCommand}"
                                Content="←" />
                            <Button
                                x:Name="SetRelativePositionInverseX"
                                Width="80"
                                HorizontalAlignment="Left"
                                VerticalContentAlignment="Center"
                                Command="{Binding SetXRelativePositionCommand}"
                                Content="→" />
                        </DockPanel>
                    </GroupBox>

                    <GroupBox
                        Width="280"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Header="步进-Y(μm)"
                        Style="{DynamicResource GroupBoxTab}">
                        <DockPanel>
                            <liftui:NumericUpDown
                                Width="100"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                ValueFormat="N1"
                                Value="{Binding YStep}" />
                            <Button
                                x:Name="SetRelativePositionY"
                                Width="80"
                                HorizontalAlignment="Left"
                                VerticalContentAlignment="Center"
                                Command="{Binding SetYInverseRelativePositionCommand}"
                                Content="↑" />
                            <Button
                                x:Name="SetRelativePositionInverseY"
                                Width="80"
                                HorizontalAlignment="Left"
                                VerticalContentAlignment="Center"
                                Command="{Binding SetYRelativePositionCommand}"
                                Content="↓" />
                        </DockPanel>
                    </GroupBox>

                    <GroupBox
                        Width="280"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Header="步进-Z(μm)"
                        IsEnabled="{Binding IsZAxisEnable}"
                        Style="{DynamicResource GroupBoxTab}">
                        <DockPanel>
                            <liftui:NumericUpDown
                                Width="100"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                ValueFormat="N1"
                                Value="{Binding ZStep}" />
                            <Button
                                x:Name="SetRelativePositionZ"
                                Width="80"
                                HorizontalAlignment="Left"
                                VerticalContentAlignment="Center"
                                Command="{Binding SetZInverseRelativePositionCommand}"
                                Content="⊙" />
                            <Button
                                x:Name="SetRelativePositionInverseZ"
                                Width="80"
                                HorizontalAlignment="Left"
                                VerticalContentAlignment="Center"
                                Command="{Binding SetZRelativePositionCommand}"
                                Content="○" />
                        </DockPanel>
                    </GroupBox>

                </UniformGrid>
            </GroupBox>
        </UniformGrid>

        <UniformGrid
            Margin="5"
            Columns="5"
            IsEnabled="{Binding IsConnect}">
            <Button
                Width="130"
                Margin="5"
                Command="{Binding SetOriginPosCommand}"
                Content="设置原点" />
            <Button
                Width="130"
                Margin="5"
                Command="{Binding XHomeCommand}"
                Content="X-回原点" />
            <Button
                Width="130"
                Margin="5"
                Command="{Binding YHomeCommand}"
                Content="Y-回原点" />
            <Button
                Width="130"
                Margin="5"
                Command="{Binding ZHomeCommand}"
                Content="Z-回原点"
                IsEnabled="{Binding IsZAxisEnable}" />
            <Button
                Width="130"
                Margin="5"
                Command="{Binding OriginPosHomeCommand}"
                Content="回到物理原点" />
            <Button
                Width="130"
                Margin="5"
                Command="{Binding ResetCommand}"
                Content="复位变量" />
            <Button
                Width="130"
                Margin="5"
                Command="{Binding StopCommand}"
                Content="全部停止移动" />
            <Button
                x:Name="ScanforStitching"
                Width="130"
                Margin="5"
                Command="{Binding ScanforStitchingCommand}"
                Content="拼接扫描测试" />
            <Button
                x:Name="ScanforRaman"
                Width="130"
                Margin="5"
                Command="{Binding ScanforRamanCommand}"
                Content="拉曼扫描测试" />
            <Button
                x:Name="ScanforZ"
                Width="130"
                Margin="5"
                Command="{Binding ScanforZAxisCommand}"
                Content="Z轴扫描测试" />
        </UniformGrid>

        <DockPanel IsEnabled="{Binding IsConnect}" LastChildFill="True">

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <GroupBox
                    Width="80"
                    Header="XSPEED"
                    Style="{DynamicResource GroupBoxTab}">
                    <TextBox Text="{Binding XSpeed}" />
                </GroupBox>

                <GroupBox
                    Width="80"
                    Header="YSPEED"
                    Style="{DynamicResource GroupBoxTab}">
                    <TextBox Text="{Binding YSpeed}" />
                </GroupBox>

                <GroupBox
                    Width="80"
                    Header="ZSPEED"
                    Style="{DynamicResource GroupBoxTab}">
                    <TextBox Text="{Binding ZSpeed}" />
                </GroupBox>
            </StackPanel>

        </DockPanel>

        <DockPanel
            Margin="5,12"
            IsHitTestVisible="True"
            LastChildFill="True">
            <Grid DockPanel.Dock="Top">
                <StackPanel
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <ToggleButton
                        liftui:StatusSwitchElement.HideUncheckedElement="False"
                        Focusable="False"
                        IsChecked="{Binding XTaskRunning}"
                        Style="{DynamicResource ToggleButtonCustom}">
                        <liftui:StatusSwitchElement.CheckedElement>
                            <Border
                                Background="{DynamicResource PrimaryBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Label
                                    Background="Transparent"
                                    Content="X轴任务忙"
                                    Foreground="White" />
                            </Border>
                        </liftui:StatusSwitchElement.CheckedElement>
                        <Border
                            Background="{DynamicResource RegionBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <Label
                                Background="Transparent"
                                Content="X轴任务忙"
                                Foreground="{DynamicResource PrimaryTextBrush}" />
                        </Border>
                    </ToggleButton>

                    <ToggleButton
                        Width="Auto"
                        liftui:StatusSwitchElement.HideUncheckedElement="False"
                        Focusable="False"
                        IsChecked="{Binding YTaskRunning}"
                        Style="{DynamicResource ToggleButtonCustom}">
                        <liftui:StatusSwitchElement.CheckedElement>
                            <Border
                                Background="{DynamicResource PrimaryBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Label
                                    Background="Transparent"
                                    Content="Y轴任务忙"
                                    Foreground="White" />
                            </Border>
                        </liftui:StatusSwitchElement.CheckedElement>
                        <Border
                            Background="{DynamicResource RegionBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <Label
                                Background="Transparent"
                                Content="Y轴任务忙"
                                Foreground="{DynamicResource PrimaryTextBrush}" />
                        </Border>
                    </ToggleButton>

                    <ToggleButton
                        Width="Auto"
                        liftui:StatusSwitchElement.HideUncheckedElement="False"
                        Focusable="False"
                        IsChecked="{Binding ZTaskRunning}"
                        Style="{DynamicResource ToggleButtonCustom}">
                        <liftui:StatusSwitchElement.CheckedElement>
                            <Border
                                Background="{DynamicResource PrimaryBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Label
                                    Background="Transparent"
                                    Content="Z轴任务忙"
                                    Foreground="White" />
                            </Border>
                        </liftui:StatusSwitchElement.CheckedElement>
                        <Border
                            Background="{DynamicResource RegionBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <Label
                                Background="Transparent"
                                Content="Z轴任务忙"
                                Foreground="{DynamicResource PrimaryTextBrush}" />
                        </Border>
                    </ToggleButton>

                    <ToggleButton
                        Width="Auto"
                        liftui:StatusSwitchElement.HideUncheckedElement="False"
                        Focusable="False"
                        IsChecked="{Binding XLimit}"
                        Style="{DynamicResource ToggleButtonCustom}">
                        <liftui:StatusSwitchElement.CheckedElement>
                            <Border
                                Background="{DynamicResource PrimaryBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Label
                                    Background="Transparent"
                                    Content="X轴限位告警"
                                    Foreground="White" />
                            </Border>
                        </liftui:StatusSwitchElement.CheckedElement>
                        <Border
                            Background="{DynamicResource RegionBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <Label
                                Background="Transparent"
                                Content="X轴限位告警"
                                Foreground="{DynamicResource PrimaryTextBrush}" />
                        </Border>
                    </ToggleButton>

                    <ToggleButton
                        Width="Auto"
                        liftui:StatusSwitchElement.HideUncheckedElement="False"
                        Focusable="False"
                        IsChecked="{Binding YLimit}"
                        Style="{DynamicResource ToggleButtonCustom}">
                        <liftui:StatusSwitchElement.CheckedElement>
                            <Border
                                Background="{DynamicResource PrimaryBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Label
                                    Background="Transparent"
                                    Content="Y轴限位告警"
                                    Foreground="White" />
                            </Border>
                        </liftui:StatusSwitchElement.CheckedElement>
                        <Border
                            Background="{DynamicResource RegionBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <Label
                                Background="Transparent"
                                Content="Y轴限位告警"
                                Foreground="{DynamicResource PrimaryTextBrush}" />
                        </Border>
                    </ToggleButton>

                    <ToggleButton
                        Width="Auto"
                        liftui:StatusSwitchElement.HideUncheckedElement="False"
                        Focusable="False"
                        IsChecked="{Binding ZLimit}"
                        Style="{DynamicResource ToggleButtonCustom}">
                        <liftui:StatusSwitchElement.CheckedElement>
                            <Border
                                Background="{DynamicResource PrimaryBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Label
                                    Background="Transparent"
                                    Content="Z轴限位告警"
                                    Foreground="White" />
                            </Border>
                        </liftui:StatusSwitchElement.CheckedElement>
                        <Border
                            Background="{DynamicResource RegionBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <Label
                                Background="Transparent"
                                Content="Z轴限位告警"
                                Foreground="{DynamicResource PrimaryTextBrush}" />
                        </Border>
                    </ToggleButton>

                </StackPanel>
            </Grid>
        </DockPanel>

        <UniformGrid
            Margin="10,5"
            Columns="3"
            IsEnabled="{Binding IsOperable}">
            <ComboBox
                x:Name="ComComboBox"
                DockPanel.Dock="Left"
                ItemsSource="{Binding SerialComs}"
                SelectedIndex="{Binding SerialIndex, Mode=TwoWay}" />
            <Button
                HorizontalAlignment="Stretch"
                Command="{Binding InitManualCommand}"
                Content="手动连接" />
            <Button
                Margin="2,0"
                HorizontalAlignment="Stretch"
                Command="{Binding InitCommand}"
                Content="自动连接" />
        </UniformGrid>

    </StackPanel>
</UserControl>
